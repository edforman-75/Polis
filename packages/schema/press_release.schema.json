{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "PressRelease",
  "type": "object",
  "required": ["doc_id", "title", "date", "body", "source", "primary_label_id", "score"],
  "properties": {
    "doc_id": { "type": "string" },
    "title": { "type": "string" },
    "date":  { "type": "string", "pattern": "^\\d{4}-\\d{2}-\\d{2}$" },
    "body":  { "type": "string" },
    "source": { "type": "string" },
    "primary_label_id": { "type": "string" },
    "score": { "type": "number" }
  },
  "additionalProperties": true
}
